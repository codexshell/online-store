{{#> admin}}
{{#*inline 'content'}}
<div class="card mb-4">
  <div class="card-header">Edit Product</div>
  <div class="card-body">
    {{#with viewData.product}}
    <form method="post" action="/admin/products/{{getId}}/update" enctype="multipart/form-data">
      <div class="row">
        <div class="col">
          <div class="row mb-3">
            <label for="name" class="col-xl-2 col-lg-4 col-md-6 col-sm-12 col-form-label">Name:</label>
            <div class="col-xl-10 col-lg-8 col-md-6 col-sm-12">
              <input id="name" type="text" name="name" value="{{getName}}" type="text" class="form-control" required>
            </div>
          </div>
        </div>
        <div class="col">
          <div class="row mb-3">
            <label for="price" class="col-xl-2 col-lg-4 col-md-6 col-sm-12 col-form-label">Price:</label>
            <div class="col-xl-10 col-lg-8 col-md-6 col-sm-12">
              <input id="price" type="number" name="price" value="{{getPrice}}" class="form-control" required>
            </div>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col">
          <div class="row mb-3">
            <label for="image" class="col-form-label col-md-5 col-lg-4 col-xl-2">Image:</label>
            <div class="col col-md-7 col-lg-8 col-xl-10">
              <input id="image" type="file" name="image" class="form-control">
            </div>
          </div>
        </div>
        <div class="col">
          &nbsp;
        </div>
      </div>
      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea id="description" class="form-control" name="description" rows="3"
          required>{{getDescription}}</textarea>
      </div>
      <button type="submit" class="btn btn-primary">Edit</button>
    </form>
    {{/with}}
  </div>
</div>
{{/inline}}
{{/admin}}